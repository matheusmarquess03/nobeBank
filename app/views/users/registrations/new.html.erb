<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://img.freepik.com/vetores-gratis/pessoas-com-smartphones-usando-o-aplicativo-bancario-movel_74855-5917.jpg?w=740" class="img-fluid"
          alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: "Digite um email válido" %>
          </div>
      
          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(mínimo de <%= @minimum_password_length %> )</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg", placeholder: "Digite uma senha" %>
          </div>
      
          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Confirme a senha" %>
          </div>
      
          <br>
          <div class="actions">
            <%= f.submit "Registrar", class: "btn btn-primary btn-sm", style: "padding-left: 2.5rem; padding-right: 2.5rem;" %>
          </div>
          <div class="text-center text-lg-start mt-4 pt-2">
            <p class="small fw-bold mt-2 pt-1 mb-0">Caso já tenha uma conta, <a href="#!"
                class="link-danger"><%= link_to "Entre Aqui", new_session_path(resource_name) %>.<br /></a></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

