<section class="vh-100">
  <h3 style="text-align: center; ">Editar Usuário</h3>
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: "Digite um email válido" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field">
            <%= f.label "Senha" %> <i>(deixe em branco se não quiser alterar)</i>
            <% if @minimum_password_length %>
            <em>(mínimo de <%= @minimum_password_length %> )</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Digite uma senha" %>
          </div>
      
          <div class="field">
            <%= f.label "Confirmar Senha" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Confirme a senha" %>
          </div>

          <div class="field">
            <%= f.label "Senha Atual" %> <i>(precisamos de sua senha atual para confirmar suas alterações)</i><br />
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control form-control-lg", placeholder: "Senha atual" %>
          </div>
      
          <br>
          <div class="actions">
            <%= f.submit "Atualizar", class: "btn btn-primary btn-sm", style: "padding-left: 2.5rem; padding-right: 2.5rem;" %>
          </div>
          <div class="text-center text-lg-start mt-4 pt-2">
            <p class="small fw-bold mt-2 pt-1 mb-0"><a href="#!"
                class="link-danger"><%= link_to "Voltar", :back %><br /></a></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

