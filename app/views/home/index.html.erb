<% if user_signed_in? %>
<h1>
  Bank Accounts
</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Account Number</th>
      <th>Balance</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= current_user.account.account_number %></td>
        <td><%= number_to_currency(current_user.account.balance) %></td>
        <td></td>
      </tr>
  </tbody>
</table>
<% end %>